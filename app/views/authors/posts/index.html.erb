<h4 class="d-flex justify-content-between mb-4">
  <span>Posts</span>
  <%= link_to 'New Post', new_post_path, class:"btn btn-primary" %>
</h4>
<% unless @posts == [] %>
  <% @posts.each do |post| %>
    <%= link_to edit_post_path(post), class:"text-decoration-none" do %>
      <div class="card mb-3 post-card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-2">
              <% if post.header_image.present? %>
                <%# raise %>
                <div class="header-img" style="background-image: url(<%= url_for(post.header_image) %>);height:150px;width:120px;background-size:cover; background-position:center;"></div>
              <% end %>
            </div>
            <div class="col-md-10">
              <% if post.published? %>
                <span class="badge badge-primary mb-2">Published</span>
              <% else %>
                <span class="badge badge-secondary mb-2">Unpublished</span>
              <% end %>
              <h5 class="card-title mb-1 text-dark"><%= post.title%></h5>
              <p class="text-secondary mb-0"><%= post.description %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
